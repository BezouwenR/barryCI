include ./head.pug

// https://getbootstrap.com/docs/3.3/css/#grid-example-basic

.container

  .row
    .col-md-1
    .col-md-10
      h3=project + ' build result'
      .panel.panel-primary(class='panel-' + panel)
        .panel-heading Information
        .panel-body
          table(class='table table-hover table-condensed')
            thead
              tr
                th Commit
                th Reference
                th Last updated
            tbody
              tr
                td=commit
                td=ref
                td=timestamp
    .col-md-1
    
  .row
    .col-md-1
    .col-md-10
      pre=message
    .col-md-1