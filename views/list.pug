include ./head.pug

// https://getbootstrap.com/docs/3.3/css/#grid-example-basic

.container

  .row
    .col-md-1
    .col-md-10
      h3='Setup configurations'
      table(class='table table-hover table-condensed')
        thead
          tr
            th ID
            th Name
            th Edit
        tbody
          each repo, key in repos
            tr
              td=key
              td=repo.name
              td
                a(href='/app/edit/' + key)
                  button.btn.btn-primary(type='button') Edit
    .col-md-1